<Window x:Class="SimpleLogger.EditQsoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit QSO" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        MinWidth="300">
    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="180"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Date:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="DateTextBox" Margin="5"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Time:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="TimeTextBox" Margin="5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Callsign:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="CallsignTextBox" Margin="5"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="NameTextBox" Margin="5"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Location:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="LocationTextBox" Margin="5"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Grid:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="GridTextBox" Margin="5"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Frequency/Band:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="6" Grid.Column="1" x:Name="FrequencyBandTextBox" Margin="5"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Mode:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="7" Grid.Column="1" x:Name="ModeTextBox" Margin="5"/>

            <Label Grid.Row="8" Grid.Column="0" Content="RST Sent:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="8" Grid.Column="1" x:Name="RstSentTextBox" Margin="5"/>

            <Label Grid.Row="9" Grid.Column="0" Content="RST Rcvd:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="9" Grid.Column="1" x:Name="RstRcvdTextBox" Margin="5"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" IsDefault="True" Click="SaveButton_Click" MinWidth="60" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="60" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>

